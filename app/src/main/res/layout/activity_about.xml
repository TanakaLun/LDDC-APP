<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".AboutActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/aboutToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="思路来源于LDDC，感谢LLDC提供的源码！"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/githubLinkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="GitHub地址：https://github.com/chenmozhijin/LDDC \n再次致谢LLDC提供的源码！"
            android:autoLink="web"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/disclaimerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="免责声明"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/disclaimerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="本软件仅供学习交流使用，请勿用于商业用途。所有歌词数据均来自网络，版权归原作者所有。如有侵权，请联系删除。"
            android:lineSpacingMultiplier="1.2"/>

        <TextView
            android:id="@+id/acknowledgementsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="致谢"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/acknowledgementsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="感谢 LDDC (https://github.com/ludoux/Lrc-Downloader) 项目。本软件基于其核心逻辑进行二次开发。"
            android:autoLink="web"
            android:lineSpacingMultiplier="1.2"/>

    </LinearLayout>

</LinearLayout> 